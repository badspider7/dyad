{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "vcs": {
    "useIgnoreFile": true
  },
  "files": {
    "ignore": [
      "**/static/build/**",
      "**/third_party/**",
      "third_party/**",
      "**/external/**",
      "tools/**",
      "mesop/**/*.json",
      "scripts/**",
      "**/esbuild*",
      "**/venv/**",
      "**/.vscode/**"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noForEach": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "useNodejsImportProtocol": "off",
        "useSelfClosingElements": "off",
        "useTemplate": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noFallthroughSwitchClause": "off",
        "noPrototypeBuiltins": "off",
        "noArrayIndexKey": "off",
        "noDoubleEquals": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "useIframeTitle": "off",
        "noLabelWithoutControl": "off",
        "noSvgWithoutTitle": "off"
      }
    }
  },
  "formatter": {
    "enabled": false
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  }
}
